      <input type="text" id="title" name="title" value="<%= book.title %>" required>

      <label for="author">Author Name:</label>
      <input type="text" id="author" name="author" value="<%= book.author %>" required>

      <label for="publishYear">Publication Year:</label>
      <input type="number" id="publishYear" name="publishYear" value="<%= book.publishYear %>" min="0" required>

      <label for="price">Price:</label>
      <input type="number" id="price" name="price" value="<%= book.price %>" min="0" step="0.01" required>

      <button id="esubmit" type="submit">Update Book</button>
  </form>
